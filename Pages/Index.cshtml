@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
}

<div class="text-center">
    @if (!isAuthenticated)
    {
        <a class="btn btn-primary" href="/login">Login with Steam</a>
    }
    else
    {
        <h1 class="display-4">Welcome, @Model.SteamPlayer?.personaname</h1>
        <a class="btn btn-danger" href="/logout">Logout</a>
    }
</div>
